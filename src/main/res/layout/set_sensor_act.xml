<?xml version="1.0" encoding="utf-8"?><!--设置传感器灵敏度页面-->
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--顶部-->
        <include
            android:id="@+id/set_sensor_top"
            layout="@layout/top"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <!--设置提示-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一般情况设备处于休眠状态，请戳孔激活设备至快闪，随后在30秒内完成设置操作"
            android:textColor="@color/red"
            android:textSize="20sp" />
        <!--检测间隔设置-->
        <RelativeLayout
            android:id="@+id/time_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="监测间隔" />

            <TextView
                android:id="@+id/watch_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/distance_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="灵敏度设置" />

            <TextView
                android:id="@+id/watch_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>
</layout>